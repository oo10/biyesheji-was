    @import "../style.css";

    .detail-good-info,.detail-good-explicit {
        position: relative;
        border: 1px solid #e3e3e3;
        margin: 50px 0;
    }

    .detail-good-info::after {
        visibility: hidden;
        clear: both;
        content: '';
        display: block;
        height: 550px;
    }

    .picture-pre {
        width: 400px;
        height: 470px;
        position: absolute;
        left: 20px;
        top: 20px;
    }
    .picture-pre > span{
        cursor: pointer;
        padding-top: 25px;
        font-size: 16px;
        color: #adadad;
        position: absolute;
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }
    .picture-pre > span i {
        cursor: pointer;
        position: relative;
        display: inline-block;
        color: #fe8f1b;
        width: 0;
        height: 0;
        border-right:  20px solid transparent;
        border-bottom: 14px  solid currentColor;
        border-left:   20px solid transparent;
        -webkit-transform: rotate(35deg) scale(0.5);
    }
    .picture-pre > span i:before {
        border-bottom: 16px solid currentColor;
        border-left: 6px solid transparent;
        border-right: 6px solid transparent;
        position: absolute;
        height: 0;
        width: 0;
        top: -9px;
        left: -13px;
        display: block;
        content: '';
        -webkit-transform: rotate(-35deg);
        -moz-transform:    rotate(-35deg);
        -ms-transform:     rotate(-35deg);
        -o-transform:      rotate(-35deg);

    }
    .picture-pre > span i:after {
        position: absolute;
        display: block;
        color: currentColor;
        top: 0;
        left: -21px;
        width: 0;
        height: 0;
        border-right: 20px solid transparent;
        border-bottom: 14px solid currentColor;
        border-left: 20px solid transparent;
        -webkit-transform: rotate(-70deg);
        -moz-transform:    rotate(-70deg);
        -ms-transform:     rotate(-70deg);
        -o-transform:      rotate(-70deg);
        content: '';
    }
    .tb-pic a{
        width: 100%;
        height: 100%;
        display: block;
    }
    .tb-pic a img{
        object-fit: cover;
        height: 100%;
        width: 100%;
    }
    .tb-booth {
        height:400px;
        display:block;
        line-height:1;
    }
    .tb-thumb{
        height: 50px;
        margin:10px 0 0;
        overflow:hidden;
    }
    .tb-thumb li{
        background:none repeat scroll 0 0 transparent;
        float:left;
        height:50px;
        width: 50px;
        margin:0 6px 0 0;
        overflow:hidden;
        padding:1px;
