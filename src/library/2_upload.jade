    @import "../style.css";
    .content-wrap {
    padding-top: 100px;
    text-align: center;
    }
    .upload-status {
    margin: 0 auto;
    width: 870px;
    height: 90px;
    position: relative;
    }
    .upload-status:before {
    display: block;
    content: '';
    height: 10px;
    width: 50%;
    position: absolute;
    top:20px;
    left: 20px;
    background: #d6d6d6;
    }
    .upload-status:after {
    display: block;
    content: '';
    height: 10px;
    width: 50%;
    position: absolute;
    top:20px;
    right: 20px;
    background: #d6d6d6;
    }
    .upload-status.cur1 .step-item:nth-of-type(1) span {
    color: #dc5925;
    }
    .upload-status.cur2 .step-item:nth-of-type(1) span,.upload-status.cur2 .step-item:nth-of-type(2) span{
    color: #dc5925;
    }
    .upload-status.cur3 span {
    color: #dc5925;
    }
    .upload-status.cur2:before {
    background: #dc5925;
    }
    .upload-status.cur3:after, .upload-status.cur3:before {
    background: #dc5925;
    }
    .steps {
    margin-top: 50px;
    position: relative;
    z-index: 9;
    display: flex;
    justify-content: space-between;
    }
    .step-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    }
    .step-item i {
    font-style: normal;
    display: inline-block;
    font-size: 28px;
    height: 60px;
    line-height: 60px;
    width: 60px;
    background: #dc5925;
    color: #fff;
    border-radius: 50%;
    }
    .step-item span {
    font-size: 20px;
    line-height: 48px;
    }
    .content-wrap button {
    cursor: pointer;
    margin-top: 70px;
    font-size: 30px;
    width: 200px;
    height: 80px;
    color: #fff;
    background: #dc5925;
    text-align: center;
    border-radius: 16px;
    }
    .btn2 {
    margin:20px 0 50px 0;
    }
    .content-wrap button p {
    font-size: 16px;
    }
    .form-item {
    font-size: 20px;
    color: #8d8d8d;
    margin: 0 auto 30px 0;
    display: flex;
    justify-content: flex-start;
    align-items: flex-start;
    }
    .form-item span {
    width: 60px;
    line-height: 40px;
    }
    .form-item .title {
    -webkit-appearance: none;
    border: 1px solid #d6d6d6;
    width: 520px;
    box-sizing: border-box;
    font-size: 16px;
    background: transparent;
    font-family: inherit;
    height:40px;
    }
    .form-item .jianjie {
    -webkit-appearance: none;
    border: 1px solid #d6d6d6;
    width: 520px;
    box-sizing: border-box;
    font-size: 16px;
    background: transparent;
    font-family: inherit;
    height:140px;
    }
    .pt2 {
    padding-top: 80px;
    width: 880px;
    margin: 0 auto;
    }
    .pt2 .money-choose {
    font-size: 16px;
    padding-left: 60px;
    }
    .money-number {
    width: 100px;
    height: 20px;
    border: 1px solid #d6d6d6;
    margin-left: 6px;
    color: #8d8d8d;
    }
    .fenlei select {
    -webkit-appearance: none;
    border: 1px solid #d6d6d6;
    width: 520px;
    box-sizing: border-box;
    font-size: 16px;
    background: transparent;
    font-family: inherit;
    height: 40px;
    }
    .pt3 h2 {
    padding-top: 100px;
    font-size: 30px;
    color: #dc5925;
    font-weight: normal;
    }
