  style.
    @import "style.css";
    .warp {
    width: 100%;
    height: 100%;
    background: #70c570;
    }
    .warp h1 {
    color: #fff;
    letter-spacing: 4px;
    font-size: 50px;
    text-align: center;
    line-height: 1;
    padding-bottom: 24px;
    }
    .warp h4 {
    color: #fff;
    letter-spacing: 10px;
    font-size: 24px;
    text-align: center;
    line-height: 1;
    }
    .main-box {
    position: fixed;
    top: calc(50% - 20px);
    left: 50%;
    transform: translate3d(-50%,-50%,0);
    margin: 0 auto;
    text-align: center;
    }
    .main-box ul {
    line-height: 40px;
    color: #fff;
    font-size: 16px;
    padding-top: 50px;
    margin: 0 auto 15px 0;
    text-align: center;
    }
    .main-box ul li {
    padding: 0 10px;
    display: inline-block;
    border-bottom: 2px solid transparent;
    cursor: pointer;
    transition: .5s ease all;
    }
    .main-box ul li.cur {
    border-bottom: 2px solid #fff;
    }
    .main-box .sign {
    margin-right: 40px;
    }
    .main-box .form {
    overflow: hidden;
    border-radius: 10px;
    width: 290px;
    margin: 0 auto;
    color: #b9b9b9;
    border-top: 1px solid #b9b9b9;
    border-left: 1px solid #b9b9b9;
    border-right: 1px solid #b9b9b9;
    }
    .main-box .form .row {
    background: #fff;
    text-align: center;
    width: 100%;
    position: relative;
    height: 50px;
    border-bottom: 1px solid #b9b9b9;
    box-shadow: 2px 6px 20px rgba(126,142,142,0.6);
    }
    .main-box .form .row input {
    padding: 10px;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    box-sizing: border-box;
    }
    .main-box .form .row > img {
    width: 105px;
    height: 36px;
    position: absolute;
    top: 50%;
    right: 15px;
    margin-top: -18px;
    border: 1px solid #b9b9b9;
    box-sizing: border-box;
    z-index: 9;
    object-fit: contain;
    background: #fff;
    }
    .main-box .form .row button {
    height: 30px;
    width: 250px;
    background: #70c570;
    border: 1px solid #b9b9b9;
    margin-top: 10px;
    color: #fff;
    letter-spacing: 2px;
    box-shadow: 2px 6px 20px rgba(126,142,142,0.6);
    }
  body
    .warp
      .main-box
        .title
          h1 &#x98CE;&#x4FE1;&#x5B50;
          |             
          h4 &#x5927;&#x5B66;&#x751F;&#x7EFC;&#x5408;&#x670D;&#x52A1;&#x5E73;&#x53F0;
        |         
        ul
          li.sign.cur &#x6CE8;&#x518C;
          |             
          li.login &#x767B;&#x9646;
        |         
        form.form.sign-form
          .row
            input(type='text', value='', placeholder='姓名')
          |             
          .row
            input(type='text', value='', placeholder='手机号')
          |             
          .row
            input(type='text', value='', placeholder='密码')
          |             
          .row
            input(type='text', value='', placeholder='验证码')
            |                 
            img(src='https://img.alicdn.com/imgextra/i4/1876943437/TB2WwDdfShlpuFjSspkXXa1ApXa_!!1876943437.jpg')
          |             
          .row
            button &#x6CE8;&#x518C;&#x8D26;&#x53F7;
        |         
        form.form.login-form(style='display: none')
          .row
            input(type='text', value='', placeholder='账户名/手机号')
          |             
          .row
            input(type='text', value='', placeholder='密码')
          |             
          .row
            button &#x767B;&#x9646;
    script.
      $(function () {
      $('.login').bind('click',function () {
      $('.sign-form').hide();
      $('.login-form').show();
      $('.login').addClass('cur');
      $('.sign').removeClass('cur');
      });
      $('.sign').bind('click',function () {
      $('.login-form').hide();
      $('.sign-form').show();
      $('.sign').addClass('cur');
      $('.login').removeClass('cur');
      })
      });
