    .order-nav ul {
    padding-left: 200px;
    display: flex;
    justify-content: space-between;
    }
    .order-nav li {
    display: inline-block;
    padding: 0;
    float: none;
    }
    .order-nav li a {
    padding: 0 30px 0 48px;
    background: #e4e4e4;
    position: relative;
    }
    .order-nav li a::before {
    display: block;
    content: '';
    position: absolute;
    /*background: #e4e4e4;*/
    /*height: 0;*/
    /*width: 0;*/
    border: 12px solid transparent;
    border-left-color: #e4e4e4;
    top: 0;
    right: -24px;
    z-index: 99;
    }
    .order-nav li a.cur {
    background: #ff6600;
    color: #fff;
    }
    .order-nav li a.cur::before {
    border-left-color: #ff6600;
    }
    .address {
    padding-bottom: 50px;
    }
    .address > a {
    position: absolute;
    top: 50px;
    right: -200px;
    width: 100px;
    color: #3064cc;
    display: block;
    }
    .address > a:nth-of-type(2) {
    top: 100px;
    }
    .srue-address {
    font-size: 20px;
    display: block;
    height: 70px;
    line-height: 70px;
    color:#fd6d0a;
    border-bottom: 2px #fd6d0a solid;
    margin-bottom: 20px;
    }
    .address-item label {
    height: 35px;
    display: flex;
    align-items: center;
    }
    .address-item label input {
    margin-right: 10px;
    }
    .address-item label > span {
    display: inline-block;
    padding-left: 2px;
    }
    .address-item label > span.telphone,.address-item label > span.default-address {
    color: #818181;
    padding-left: 10px;
    }
    .add-address {
    color: #3064cc;
    line-height: 35px;
    padding-left: 30px;
    }
    .srue-order {
    font-size: 20px;
    color: #fd6d0a;
    }
    .thead {
    padding-bottom: 10px;
    border-bottom: 2px #fd6d0a solid;
    /*padding-right: 10px;*/
    margin-bottom: 60px;
    }
    .good-name {
    line-height: 30px;
    display: inline-block;
    width: 300px;
    text-align: center;
    }
    /*.thead-right span:nth-of-type(4) {*/
    /*padding-left: 70px;*/
    /*}*/
    .thead-right span {
    padding-left: 0 !important;
    }
    .thead-left .price,.tbody .price {
    padding-left: 0 !important;
    display: inline-block;
    width: 170px;
    text-align: center;
    }
    .thead-right .total,.tbody-item .tbody-item-right .total {
    padding-right: 0;
    width: 130px;
    text-align: center;
    }
    .thead-right .count-dowm,.tbody-item .tbody-item-right .count-dowm {
    width: 180px;
    text-align: center;
    }
    .thead-right .number,.tbody-item .tbody-item-right .number {
    width: 100px;
    text-align: center;
    }
    .tbody span,.thead span {
    display: inline-block;
    }
    .tbody-item {
    padding: 10px;
    margin: 0;
    }
    .order-footer-warp {
    margin-top: 10px;
    }
    .order-footer .message {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    }
    .order-footer .message h6 {
    width: auto;
    display: inline-block;
    padding-right: 15px;
    }
    .order-footer .message input {
    color: #aaaaaa;
    box-sizing: border-box;
    border: 1px solid #aaaaaa;
    height: 20px;
    width: 320px;
    display: inline-block;
    }
    .express-type {
    line-height: 20px;
    padding-right: 50px;
    }
    .express-choose {
    line-height: 20px;
    display: flex;
    flex-direction: column;
    }
    .express-choose label {
    margin-bottom: 5px;
    line-height: 20px;
    display: flex;
    align-items: center;
    }
    .express-choose label span {
    text-align: center;
    font-size: 14px;
    width: 100px;
    margin-left: 10px;
    line-height: 20px;
    border: 1px solid #b0b0b0;
    box-sizing: border-box;
    }
    /*  pay-info   */
    .order-payInfo {
    border: 1px solid #ececec;
    border-bottom: none;
    box-sizing: border-box;
    text-align: right;
    margin-top: 10px;
    padding-top: 20px;
    padding-right: 20px;
    background: #fcfcfc;
    }
    .order-payInfo .payInfo-wrapper {
    padding: 10px;
    line-height: 1.6;
    display: inline-block;
    border: 1px solid #f40;
    text-align: left;
    }
    .order-realPay .order-price {
    font-weight: bold;
    font-size: 26px;
    margin-right: 4px;
    color: #fd6d0a;
    }
    .confirmAddr-title {
    font-weight: 700;
    color: #333;
    }
    .order-submitOrder {
    border: 1px solid #ececec;
    border-top: none;
    box-sizing: border-box;
    text-align: right;
    margin-top: -1px;
    padding-right: 20px;
    background: #fcfcfc;
    }
    .order-submitOrder .wrapper {
    display: inline-block;
    padding: 0 0 5px 5px;
    }
    .order-submitOrder .go-back {
    color: #36c;
    margin-right: 50px;
    line-height: 50px;
    }
    .order-submitOrder .tip {
    color: #d4c4ab;
    line-height: 1;
    padding: 20px 0;
    }
    .order-submitOrder .go-btn {
    display: inline-block;
    width: 120px;
    height: 50px;
    line-height: 50px;
    position: relative;
    cursor: pointer;
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    background: #f40;
    color: #fff;
    }
